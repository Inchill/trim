{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "moduleResolution": "Node",
    "typeRoots": ["types"],
    "noImplicitThis": false
  },
  "include": ["src/**/*", "rollup.config.js"],
  "exclude": ["node_modules"]
}
