$lite = #FFF
$size = 12px

#loader-wrapper
  position: fixed
  left: 0
  top: 0
  z-index: 9999
  width: 100%
  height: 100vh
  display: flex
  justify-content: center
  align-items: center
  background-color: $lite

  &.hidden
    display: none

#loader
  width: $size
  height: $size
  border: 2px solid #eee
  border-top-color: #acc
  border-radius: 50%
  display: inline-block
  position: relative
  animation: rotation 1s linear infinite

  &-text
    margin-right 6px
    font-family: Arial, sans-serif
    font-size: 12px

@keyframes rotation
  0%
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)